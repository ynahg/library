<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="book_category_list_view" model="ir.ui.view">
        <field name="name">Book Category List</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <tree string="Book Categories">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="book_category_form_view" model="ir.ui.view">
        <field name="name">Book Category Form</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <form string="Book Category">
                <field name="name"/>
            </form>
        </field>
    </record>

    <menuitem id="book_category_menu" name="Book Categories" parent="library.library_menu" action="book_category_list_view"/>
</odoo>